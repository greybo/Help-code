<resources>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pin_reset_color_hint</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/pin_reset_color_hint</item>
        <item name="hintTextAppearance">@style/Enter_OTP_HintTextAppearance</item>
        <item name="errorTextAppearance">@style/EnterOtpTextAppearanceError</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="ExposedDropdownMenuTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/pin_reset_color_hint</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/pin_reset_color_hint</item>
        <item name="hintTextAppearance">@style/Enter_OTP_HintTextAppearance</item>
        <item name="errorTextAppearance">@style/EnterOtpTextAppearanceError</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="Enter_OTP_HintTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/pin_reset_color_hint</item>
    </style>

    <style name="EnterOtpTextAppearanceError">
        <item name="android:textColorHint">@color/pin_reset_color_hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PinButtonSubmit">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/bg_button_default</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ToolbarDefaultStyle" parent="AppTheme">
        <!--        <item name="android:theme">?attr/actionBarTheme</item>-->
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--        <item name="android:textAppearance">@style/H6_high</item>-->
        <!--        <item name="titleTextColor">@color/__text_high</item>-->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Button_base">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="lineHeight">@dimen/button_line_height</item>
        <item name="android:letterSpacing">@integer/button_letter_spacing</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Button_label" parent="Button_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
</resources>
