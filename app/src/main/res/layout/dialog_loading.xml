<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_loading_container"
    android:layout_width="280sp"
    android:layout_height="wrap_content"
    android:background="@color/background_charcoal"
    android:orientation="horizontal"
    android:padding="20dp">

    <ProgressBar
        android:id="@+id/dialog_loading_bar"
        style="@style/ProgressBarStyle"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/maud_black" />

    <!--        style="@style/Subtitle1_high"-->
    <TextView
        android:id="@+id/loadingDialogTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        tools:text="Please wait..." />
</LinearLayout>